<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.Update.UpdateActivity"
    android:orientation="vertical">

    <!--    custom toolbar-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:background="#4076D4"
            />
    </com.google.android.material.appbar.AppBarLayout>



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="25dp"
       android:orientation="vertical"
       android:layout_margin="20sp"
       >

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="User Details"
           android:textSize="40sp"
           android:gravity="center"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/tv_user_id"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
              android:text="User Id"
              android:textSize="24sp" />


       <TextView
           android:id="@+id/tv_first_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="First Name"
           android:textSize="24sp" />

       <EditText
           android:id="@+id/et_first_name_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="First Name"
           android:padding="10dp"
           android:layout_marginVertical="10dp"
           android:background="#6D95B1E2"/>

       <TextView
           android:id="@+id/tv_last_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Last Name"
           android:textSize="24sp" />

       <EditText
           android:id="@+id/et_last_name_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Last Name"
           android:padding="10dp"
           android:layout_marginVertical="10dp"
           android:background="#6D95B1E2"/>

       <TextView
           android:id="@+id/tv_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Email"
           android:textSize="24sp" />

       <EditText
           android:id="@+id/et_email_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Email"
           android:padding="10dp"
           android:layout_marginVertical="10dp"
           android:background="#6D95B1E2"/>


       <TextView
           android:id="@+id/tv_password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Password"
           android:textSize="24sp" />

       <EditText
           android:id="@+id/et_password_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Email"
           android:padding="10dp"
           android:layout_marginVertical="10dp"
           android:background="#6D95B1E2"/>

       <Button
           android:id="@+id/btn_update"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Update"
           android:textSize="24sp"/>

       <Button
           android:id="@+id/btn_logout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Logout"
           android:textSize="24sp"
           android:layout_marginTop="10dp"
           />

   </LinearLayout>

</LinearLayout>